<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="{{ asset('css/style.css')}}" rel="stylesheet">
        
        
        
        {% endblock %}
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script type="text/javascript" src="../js/main.js"></script>
        {% endblock %}
    </head>
    
    <body>
        {% block body %}
            <header>    
            {% block header %}
                
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-5 col-md-4 my-auto">
                            <ul class="nav nav-fill ">
                                <li class="nav-item">
                                    <button class="nav-link active btn-01"> <a href="{{ path('accueil') }}">Accueil </a></button>
                                </li>
                                <li class="nav-item">
                                    {# <button class="nav-link btn-01" href="#">Testez gratuitement !</button> #}
                                    <a href="{{ path('jeux') }}"><button class="nav-link btn-01">Testez gratuitement !</button></a>
                                </li>
                                <li class="nav-item">
                                    {# <button class="nav-link btn-01" href="#">Découvrez nos offres</button> #}
                                    <a href="{{ path('offres') }}"><button class="nav-link btn-01">Découvrez nos offres</button></a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-2 col-md-4 text-center">
                            <img src="{{ asset ('image/gamepad-logo.png' )}}" class="rounded-circle" alt="">
                        </div>
                        <div class="col-lg-5 col-md-4 my-auto">
                            <ul class="nav justify-content-end nav-fill">
                                <li class="nav-item">
                                    <a href="{{ path('app_register') }}"><button class="nav-link btn-01">Inscription</button></a>
                                </li>
                                <li class="nav-item">
                                    {# <button class="nav-link btn-01" href="#">Contact</button> #}
                                    <a href="{{ path('contact') }}"><button class="nav-link btn-01">Contact</button></a>
                                </li>
                                <li class="nav-item">
                                    {# <button class=""> <a href="{{ path('app_login') }}">Connexion</a> </button> #}
                                {% if app.user %}
                                    <a href="{{ path('app_logout') }}"><button class="nav-link btn-01">Déconnexion</button></a>
                                {% else %}
                                    <a href="{{ path('app_login') }}"><button class="nav-link btn-01" type="submit">Connexion</button></a>
                                {% endif %}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <hr>
            {% endblock %}
            </header>

             <footer class="footer-area footer--light">
                {% block footer %}
                <div class="footer-big p-0">
                    
                    <div class="container-fluid no-padding">
                        <hr>
                        <div class="row pt-2">
                            <div class="col-md-3 col-sm-12 text-center">
                                <div class="footer-widget">
                                    <ul class="contact-details"></ul>
                                        <div class="widget-about">

                                            <div class="text-center">
                                                <img src="{{ asset ('image/gamepad-logo.png' )}}" alt="mettreAsset" class="img-fluid" width="70">
                                            </div>
                                            <h6>GamePad, testez-nous ! </h6>
                                            <li>
                                                <span class=""></span> Contactez-nous:
                                                <a href="tel:344-755-111">344-755-111</a>
                                            </li>
                                            <li>
                                                <span class=""></span>
                                                <a href="mailto:support@gamepad.com">support@gamepad.com</a>
                                            </li>
                                        </div>
                                    </ul>
                                </div> <!-- Ends: .footer-widget -->
                                
                            </div> <!-- end /.col-md-4 -->
                        
                            <div class="col-md-3 col-sm-4 text-center">
                                <div class="footer-widget">
                                    <div class="footer-menu footer-menu--1">
                                        <h4 class="footer-widget-title">Catégories populaires</h4>
                                        <ul>
                                            <li>
                                                <a href="#">Testez-nous !</a>
                                            </li>
                                            <li>
                                                <a href="#">Parrainage</a>
                                            </li>
                                            <li>
                                                <a href="#">Découvrir nos offres</a>
                                            </li>
                                        </ul>
                                    </div> <!-- end /.footer-menu -->
                                </div> <!-- Ends: .footer-widget -->
                            
                            </div> <!-- end /.col-md-3 -->
                    
                            <div class="col-md-3 col-sm-4 text-center">
                                <div class="footer-widget">
                                    <div class="footer-menu">
                                        <h4 class="footer-widget-title">Notre entreprise</h4>
                                        <ul>
                                            <li>
                                                <a href="#">A propos de nous</a>
                                            </li>
                                            <li>
                                                <a href="#">Fonctionnement</a>
                                            </li>
                                            <li>
                                                <a href="#">Contact</a>
                                            </li>
                                        </ul>
                                    </div> <!-- end /.footer-menu -->
                                </div> <!-- Ends: .footer-widget -->
                            
                            </div> <!-- end /.col-lg-3 -->
                        

                            <div class="col-md-3 col-sm-4 text-center">
                                <div class="footer-widget">
                                    <div class="footer-menu no-padding">
                                        <h4 class="footer-widget-title">Conditions</h4>
                                        <ul>
                                            <li>
                                                <a href="#">Termes et conditions</a>
                                            </li>
                                            <li>
                                                <a href="#">Politique de protection</a>
                                            </li>
                                            <li>
                                                <a href="#">Cookies</a>
                                            </li>
                                        </ul>
                                    </div> <!-- end /.footer-menu -->
                                </div><!-- Ends: .footer-widget -->
                            </div> <!-- Ends: .col-lg-3 -->
                        </div> <!-- end /.row -->
                    </div> <!-- end /.container -->
                </div> <!-- end /.footerbig -->

                <div class="mini-footer p-1">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="copyright-text">
                                    <p>© 2020
                                        <a href="#">GamePad</a>. Tous droits réservés.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
                    
                {% endblock %}
            </footer> 
        {% endblock %}
    </body>
</html>
